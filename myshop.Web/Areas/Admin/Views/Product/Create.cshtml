@model ProductVM

@{
    ViewBag.pageTitle = "Product Management";
    ViewBag.CardTitle = "Create Product";
}

<div class="row">
    <div class="col-md-4">
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Description"></label>
        <textarea id="Catogory_Description" asp-for="Product.Description" class="form-control"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Image"></label>
        <input type="file" name="file" id="imgfile" class="form-control" onchange="fillimg(event);"/>
    </div>

    <div class="mb-3">
        <label asp-for="Product.CategoryId"></label>
        <select asp-for="Product.CategoryId" class="form-control" asp-items="Model.CategotyList">
            <option disabled selected>-- Select Category --</option>
        </select>

    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="index" asp-controller="Category" class="btn btn-warning">Back To Index</a>
    </div>
</form>
</div>
    <div class="col-md-4">
        <div class="container">
            <img id="Imagepreview" src="~/@Model.Product.Image" width="300px" height="300px" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.tiny.cloud/1/dhbqz9g0i0t1xq14y0rtqhim7tyo8l2e0gvj360aiyne2h7x/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#Catogory_Description',
            readonly: false,
            api_key: "dhbqz9g0i0t1xq14y0rtqhim7tyo8l2e0gvj360aiyne2h7x"
        });
    </script>

    <script>
        var fillimg = function(event){
            var imgholder = document.getElementById("Imagepreview");
            imgholder.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
}

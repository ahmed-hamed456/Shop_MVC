@model ProductVM

@{
    ViewBag.pageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input asp-for="Product.ProductId" hidden/>
            <input asp-for="Product.Image" hidden/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Description"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Price"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Image"></label>
                <input type="file" name="file" id="imgfile" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Product.CategoryId"></label>
                <select asp-for="Product.CategoryId" class="form-control" asp-items="Model.CategotyList">
                    <option disabled selected>-- Select Category --</option>
                </select>

            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success"/>
                <a asp-action="index" asp-controller="Product" class="btn btn-warning">Back To Index</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="container">
            <img src="~/@Model.Product.Image" width="100px" height="300px"/>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
